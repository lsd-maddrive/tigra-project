<?xml version="1.0"?>
<launch>
  <arg name="debug" default="false" />
  <arg name="stereo" default="false" />
  <arg name="old_rtab" default="false" 
  />
  <include file="$(find tigra_software)/launch/drivers/tigra_tf_transforms.launch"></include>
  <!-- <include file="$(find tigra_vision)/launch/drivers/start_head_stereo.launch"></include> -->

  <include file="$(find tigra_software)/launch/drivers/uc_socket_server.launch" />
  <include file="$(find tigra_software)/launch/drivers/uc_convertion_layer.launch" />
  <include file="$(find tigra_software)/launch/drivers/start_joy_teleop.launch" />
  <!-- <include file="$(find tigra_vision)/launch/drivers/start_rs_camera.launch"></include> -->
  <!-- <include file="$(find tigra_vision)/launch/drivers/start_elp_camera.launch"> -->
  <!-- </include> -->

  <!-- STEREO RTAB -->

  <include file="$(find tigra_vision)/launch/rtabmap_new.launch"></include>

  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization" clear_params="true" output="screen">
    <rosparam command="load" file="$(find tigra_software)/config/ekf/ekf_vo.yaml" />
    <remap from="odometry/filtered" to="tigra/odometry/filtered" />
  </node>

  <include file="$(find tigra_software)/launch/drivers/move_base.launch">
    <arg name="folder_name" value="move_base_vo" />
    <arg name="cmd_topic" value="tigra/cmd_vel_raw" />
  </include>

  <node pkg="tigra_software" type="steering_filter" name="steering_filter" output="screen">
    <!-- <param name="steering_alpha" value="0.3"/> -->
    <!-- NB - Disabled filter -->
    <param name="steering_alpha" value="1.0" />
    <remap from="cmd_vel_raw" to="tigra/cmd_vel_raw" />
    <remap from="cmd_vel" to="tigra/cmd_vel" />
  </node>

  <node if="$(arg debug)" pkg="rqt_plot" type="rqt_plot" name="steering_plot" output="screen" args="/tigra/cmd_vel_raw/angular/z /tigra/cmd_vel/angular/z" />

  <include file="$(find tigra_software)/launch/view/rviz_start.launch">
    <arg name="rvizconfig" value="$(find tigra_software)/config/rviz/full_move_base.rviz" />
  </include>
</launch>
    <!-- rviz -->
    <include if="$(arg rviz)" file="$(find tigra_software)/launch/view/rviz_start.launch">
        <arg name="rvizconfig" value="$(find tigra_software)/config/rviz/common_sim.rviz" />
    </include>

</launch>